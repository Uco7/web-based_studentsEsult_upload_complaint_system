<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>staff profile Profile Page</title>
    <link rel="stylesheet" href="/css/dashbord.css">
    <link rel="stylesheet" href="/css/staffProfile.css">

  
   <!-- staff   nav bar -->
<%- include('_staffIncludeFolder/staffNavBar') %>
<!-- staff   nav bar -->
<%- include('_staffIncludeFolder/staffAcordium') %>


    <div class="container wrapp" id="complaintSection" >
     <h2 class="" id="bio">Staff bio Data</h2>
     <form class="row g-3"  enctype="multipart/form-data">
        <% if (user.profileImage && user.imageType) { %>
         <div class="container text-center">
            <img src="data:<%= user.imageType %>;base64,<%= user.profileImage %>" alt="Profile Image" style="width: 200px; height: 200px; border-radius: 10px;">
         </div>
         <% } else { %>
            <p>No image uploaded</p>
        <% } %>
         
       
         
         <div class="col-md-6">
             <label for="matric" class="form-label">First Name</label>
             <input type="text" class="form-control" name="department" value="<%= user.fname %>" disabled>
 
         </div>
         <div class="col-md-6">
             <label for="matric" class="form-label">Last Name</label>
             <input type="text" class="form-control" name="department" value="<%=user.lname  %>" disabled>
 
         </div>
       
        
         <div class="col-md-6">
             <label for="email" class="form-label">Email</label>
             <input type="email" class="form-control" name="email" value="<%= user.email %>" required>
         </div>
         <div class="col-md-6">
             <label for="phone_no" class="form-label">Phone Number</label>
             <input type="number" class="form-control" name="phone_no" value="<%= user.phone_no %>"  required>
         </div>
         <div class="col-md-6">
             <label for="course_title" class="form-label"> Residential Address</label>
             <input type="text" class="form-control" name="course_title" placeholder="Enter course title" value="<%= user.address %>"  required>
         </div>
         <div class="col-md-6">
             <label for="course_code" class="form-label">State of origin</label>
             <input type="text" class="form-control" name="course_code" placeholder="state origin"  value="<%= user.state%>" required>
         </div>
         <div class="col-md-6">
             <label for="complaint_date" class="form-label">LGA</label>
             <input type="text" class="form-control" name="LGA"  value="<%= user.LGA%>" required>
         </div>
         <div class="col-md-6">
             <label for="level" class="form-label">Matric Number</label>
             <input type="text" class="form-control" name="level" placeholder="Provide the related level" value="<%=user.matric %>"  required>
         </div>
       
        
         <div class="col-12">
            <button id="btn" class="btn btn-success">Save</button>
         </div>
     </form>
 </div>
                    
                 </div>
                 <script>
                    document.querySelector('#btn').addEventListener('click',function(e){
                        e.preventDefault()
                        const   button=this;
                        button.innerHTML='saving...'
                        setTimeout(function(){
                            button.innerHTML='saved'
                            },3000)
                        setTimeout(function(){
                          
                            window.location="/user/dashBord"
                            },4000)
                            })
                 </script>

 
</body>
</html>