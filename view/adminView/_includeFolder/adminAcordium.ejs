<div class="accordion accordion-flush" id="accordionFlushExample" style="width: 500px; background-color:#70837d; color: white;" >
   
    <div class="accordion-item" style="width: 500px;">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree" style="width: 500px; background-color: #70837d;color: white;">
               
                <%if(notify&&notify.length>0){  %>

                    New notification<br>
                    <% notify.forEach(element => { %>
                     
                        <%= element.sentAt %>
                        <% }) %>
               <%  } else { %>
                  No new notification<br>
               <%  }%> 
            </button>
        </h2>
        <div id="flush-collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
            <div class="accordion-body" style="background-color: #70837d; width: 500px; color: white;">
                <%if(notify&&notify.length>0){  %>

                  <% notify.forEach(element => { %>
                   
                    <%= element.message %>
                    <% }) %>
                  
               <%  } else { %>
                  No new notification<br>
               <%  }%>
            </div>
        </div>
    </div>
</div>


<!-- jQuery library -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Bootstrap JS Bundle (includes Popper) -->
<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var myAccordion = new bootstrap.Accordion(document.getElementById('accordionFlushExample'));
    });
</script>