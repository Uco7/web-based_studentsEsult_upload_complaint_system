<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Profile Page</title>
    <link rel="stylesheet" href="/css/adminDashBord.css">

    <link rel="stylesheet" href="/css/adminProfile.css">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- including admin navbar -->
    <%- include('_includeFolder/adminNav') %>
         <!-- including admin navbar -->
         <%- include('_includeFolder/adminAcordium') %>
    <div class="container wrapp" id="complaintSection">
        <div class="text-center">
            <h2 class="" id="bio">Admin Bio Data</h2>

        </div>
        <form class="row g-3" enctype="multipart/form-data">
            <div class="container text-center">
                <!-- <img src="/profil.jpg" alt="profile image" style="width: 200px; height: 200px; border-radius: 10px;"> -->
            </div>
            <div class="col-md-6">
                <label for="fname" class="form-label">First Name</label>
                <input type="text" class="form-control" name="fname" value="<%= admin.fname %>" disabled>
            </div>
            <div class="col-md-6">
                <label for="lname" class="form-label">Last Name</label>
                <input type="text" class="form-control" name="lname" value="<%= admin.lname %>" disabled>
            </div>
            <div class="col-md-6">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" name="email" value="<%= admin.email %>" required>
            </div>
            <div class="col-md-6">
                <label for="phone_no" class="form-label">Phone Number</label>
                <input type="text" class="form-control" name="phone_no" value="<%= admin.phone_no %>" required>
            </div>
            <div class="col-md-6">
                <label for="address" class="form-label">Residential Address</label>
                <input type="text" class="form-control" name="address" value="<%= admin.address %>" required>
            </div>
            <div class="col-md-6">
                <label for="state" class="form-label">State of Origin</label>
                <input type="text" class="form-control" name="state" value="<%= admin.state %>" required>
            </div>
            <div class="col-md-6">
                <label for="LGA" class="form-label">LGA</label>
                <input type="text" class="form-control" name="LGA" value="<%= admin.LGA %>" required>
            </div>
            <div class="col-md-6">
                <label for="gender" class="form-label">Gender</label>
                <input type="text" class="form-control" name="gender" value="<%= admin.gender %>" required>
            </div>
            <div class="col-md-6">
                <label for="role" class="form-label">Role</label>
                <input type="text" class="form-control" name="role" value="<%= admin.role %>" disabled>
            </div>
            <div class="col-md-6">
                <label for="date_of_birth" class="form-label">Date of Birth</label>
                <input type="date" class="form-control" name="date_of_birth" value="<%= new Date(admin.date_of_birth).toISOString().split('T')[0] %>" required>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-success" id="btn">Save</button>
            </div>
        </form>
    </div>
    <script>
        document.querySelector('#btn').addEventListener('click',function(e){
            e.preventDefault()
            const   button=this;
            button.innerHTML='saving...'
            setTimeout(function(){
                button.innerHTML='saved'
                },3000)
            setTimeout(function(){
              
                window.location="/admin/dashBord"
                },1000)
                })
     </script>
   <script src="/js/adminDashBord.js"></script>

</body>
</html>
